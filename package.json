{
  "name": "@monorepo/root",
  "version": "0.0.1",
  "description": "TypeScript monorepo boilerplate for small projects",
  "license": "MIT",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "npm run clean --workspace=@monorepo/cli && npm run clean --workspace=@monorepo/common",
    "lint": "eslint .",
    "test": "npm run test --workspace=@monorepo/common",
    "build": "npm run build --workspace=@monorepo/common && npm run build --workspace=@monorepo/cli",
    "start": "npm run start --workspace=@monorepo/cli",
    "sonar": "dotenv -e .env -- sonar-scanner",
    "sonar:ci": "sonar-scanner"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@types/node": "24.7.1",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.1",
    "@vitest/coverage-v8": "^3.2.4",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.37.0",
    "eslint-plugin-node": "^11.1.0",
    "rimraf": "^6.0.1",
    "sonar-scanner": "^3.1.0",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.46.0",
    "vitest": "^3.2.4"
  }
}
